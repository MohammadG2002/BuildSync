{
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/frontend/dist/**": true,
    "**/dist/**": true,
    "**/backend/uploads/**": true,
    "**/uploads/**": true,
    "**/coverage/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/.vite/**": true,
    "**/.parcel-cache/**": true,
    "**/.turbo/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true,
    "**/.svelte-kit/**": true,
    "**/.storybook/**": true,
    "**/storybook-static/**": true,
    "**/cypress/**": true,
    "**/playwright-report/**": true,
    "**/tmp/**": true,
    "**/logs/**": true
  },
  "search.exclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/frontend/dist/**": true,
    "**/dist/**": true,
    "**/backend/uploads/**": true,
    "**/uploads/**": true,
    "**/coverage/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/.vite/**": true,
    "**/.parcel-cache/**": true,
    "**/.turbo/**": true,
    "**/.next/**": true,
    "**/.nuxt/**": true,
    "**/.svelte-kit/**": true,
    "**/.storybook/**": true,
    "**/storybook-static/**": true,
    "**/cypress/**": true,
    "**/playwright-report/**": true,
    "**/tmp/**": true,
    "**/logs/**": true
  },
  "search.followSymlinks": false,
  "npm.autoDetect": "off",
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.countBadge": "off",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.maxTsServerMemory": 3072,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "javascript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  }
}
